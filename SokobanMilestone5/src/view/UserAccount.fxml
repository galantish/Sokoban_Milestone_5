               <children>
                  <Label text="User Name: ">
                     <HBox.margin>
                        <Insets bottom="10.0" left="30.0" right="10.0" top="15.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Segoe UI Black" size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="username" prefHeight="31.0" prefWidth="180.0" promptText="Shir Galanti">
